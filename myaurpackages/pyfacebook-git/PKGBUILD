# Contributor: Gergely Imreh <imrehgATgmailDOTcom>

pkgname=pyfacebook-git
pkgver=20090511
pkgrel=1
pkgdesc="A thin wrapper for accessing Facebook's RESTful API through Python."
arch=('i686' 'x86_64')
url="http://github.com/sciyoshi/pyfacebook/"
license=('GPL')
depends=('python')
makedepends=('git')
provides=('pyfacebook')
conflicts=('pyfacebook')
source=()
md5sums=()

_gitroot="git://github.com/sciyoshi/pyfacebook.git"
_gitname="pyfacebook"

build() {
  cd "${srcdir}"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd ${_gitname} && git-pull origin
    msg "The local files are updated."
  else
    git clone ${_gitroot}
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -r "${srcdir}/${_gitname}-build"
  git clone "${srcdir}/${_gitname}" "${srcdir}/${_gitname}-build"
  cd "${srcdir}/${_gitname}-build"

  #
  # BUILD HERE
  #

  python setup.py build || return 1
  python setup.py install --root=${pkgdir} || return 1
} 

